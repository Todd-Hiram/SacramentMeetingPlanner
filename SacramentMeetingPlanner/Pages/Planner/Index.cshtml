@page
@model SacramentMeetingPlanner.Pages.Planner.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Sacrement Meetings</h2>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr class="table_head">
            <th>
                @Html.DisplayNameFor(model => model.Planner[0].MeetingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planner[0].BishopricMemeber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planner[0].OpeningHymn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planner[0].OpeningPrayer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planner[0].SacramentHymn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planner[0].IntermediateHymn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planner[0].ClosingHymn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planner[0].ClosingPrayer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planner[0].Speakers)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Planner) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MeetingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BishopricMemeber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpeningHymn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpeningPrayer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SacramentHymn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IntermediateHymn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosingHymn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosingPrayer)
            </td>
            <td>
                @if (item.Speakers != null)
                {
                @foreach (var speaker in item.Speakers)
                {
                    <p>@Html.DisplayFor(modelItem => speaker.LastName)</p>
                }
                }
                else
                {
                    <span>No Speakers</span>
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PlannerId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PlannerId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PlannerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
